<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@mipmap/login_background"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".RegistrationScreen1"
            android:layout_marginTop="30sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout"
            android:scaleType="fitXY">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/login_icon"
                android:src="@mipmap/influencerlogo"
                android:visibility="visible"
                android:layout_marginTop="10sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="LOGIN"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_below="@+id/login_icon"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:id="@+id/login_title"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/login_title"
                android:id="@+id/relativeLayout1"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@color/transperent"
                android:scaleType="fitXY">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailid"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:ems="14"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/next_button"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/emailid"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:background="@color/colorAccentnew"
                    android:ems="8"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_alignLeft="@+id/emailid"
                    android:layout_alignStart="@+id/emailid"
                    android:layout_alignRight="@+id/emailid"
                    android:layout_alignEnd="@+id/emailid" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/next_button"
                    android:id="@+id/relativeLayout2"
                    android:layout_marginTop="25sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/newuser"
                        android:text="New User ? "
                        android:textColor="@color/ashe"
                        android:textSize="20sp"
                        android:layout_marginTop="25sp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="REGISTER"
                        android:textColor="@color/yellow"
                        android:textStyle="normal"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:id="@+id/register"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/newuser"
                        android:layout_toEndOf="@+id/newuser" />

                </RelativeLayout>

            </RelativeLayout>
            <View
                android:id="@+id/linenew"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="60sp"
                android:layout_below="@+id/relativeLayout1"
                android:background="#c0c0c0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/terms"
                android:textColor="@color/ashe"
                android:textSize="11sp"
                android:text="@string/login_terms"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="25sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/linenew" />

        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>


