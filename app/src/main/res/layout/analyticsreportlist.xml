<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:background="@color/ashe">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/card_margin1"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearnew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/sm_type"
                        android:layout_width="200sp"
                        android:layout_height="50sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sm_typetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:singleLine="false"
                            android:text="Socialmedia Type"
                            android:textColor="@color/actionbarcolour"
                            android:textSize="16sp"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/social_media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="Facebook"
                            android:textColor="@color/orange"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:background="@color/ashe" />

                    <LinearLayout
                        android:id="@+id/status_type"
                        android:layout_width="200sp"
                        android:layout_height="50sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/statustext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="sans-serif"
                            android:singleLine="false"
                            android:text="Status"
                            android:textColor="@color/actionbarcolour"
                            android:textSize="16sp"
                            android:typeface="sans" />


                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="Success"
                            android:textColor="@color/orange"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            <View
                android:id="@+id/bottomline"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_below="@+id/linearnew"
                android:background="@color/ashe"/>

            <LinearLayout
                android:id="@+id/linearn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bottomline"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/urllink_valuetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="URL LINK"
                    android:singleLine="false"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/actionbarcolour"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:id="@+id/posted_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:text="https://www.influencer.in/"
                    android:layout_below="@+id/urllink_valuetext"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:id="@+id/bottomline1"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:layout_below="@+id/linearn"
                android:background="@color/ashe"/>


            <LinearLayout
                android:id="@+id/linearnew1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bottomline1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/reach_type"
                android:layout_width="220sp"
                android:layout_height="50sp"
                android:gravity="center"
                android:layout_below="@+id/bottomline"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/reach_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/reachengage"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_corner_button_new"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@color/ashe" />

            <LinearLayout
                android:id="@+id/action_type"
                android:layout_width="220sp"
                android:layout_height="50sp"
                android:gravity="center"
                android:layout_below="@+id/bottomline"
                android:orientation="vertical">

                <Button
                    android:id="@+id/action_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="Edit Action"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_corner_button_newone"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/campid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/campname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/contentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/posted_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/to_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/reach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/reach_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/engagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/engage_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />

</RelativeLayout>