<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingLeft="5dp"
    android:background="@color/ashe"
    android:paddingRight="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp">

        <RelativeLayout
            android:id="@+id/facebookpost_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="center">

            <ImageView
                android:id="@+id/post_icon"
                android:layout_width="80sp"
                android:layout_height="60sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/post_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/post_icon"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="23dp"
                android:layout_toEndOf="@+id/post_icon"
                android:layout_toRightOf="@+id/post_icon"
                android:fontFamily="sans-serif-condensed"
                android:text="post id"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <Button
                android:id="@+id/post_select"
                android:layout_width="50sp"
                android:layout_height="30sp"
                android:layout_alignBottom="@+id/edit_profile_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/orange"
                android:text="select"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>