<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/listtop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<android.support.v4.widget.SwipeRefreshLayout-->
            <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--android:id="@+id/swiperefresh"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="List of Facebook Post : "
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/actionbarcolour"
            android:gravity="start"
            android:layout_below="@+id/welcometext"
            android:id="@+id/headingtext_one"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(Select any one)"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/colorAccentnew"
            android:gravity="left"
            android:id="@+id/headingtext_two"
            android:layout_below="@+id/headingtext_one"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

            <ListView
                android:id="@+id/facebookpostvalues"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/headingtext_two"
                android:layout_marginTop="10sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        <!--</android.support.v4.widget.SwipeRefreshLayout>-->

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>

