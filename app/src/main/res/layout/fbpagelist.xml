<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingLeft="5dp"
    android:background="@color/ashe"
    android:paddingRight="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp">

        <RelativeLayout
            android:id="@+id/facebookpost_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="center">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80sp"
                android:layout_height="60sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/pgname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profile_image"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="23dp"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_toRightOf="@+id/profile_image"
                android:fontFamily="sans-serif-condensed"
                android:text="Page Name"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/pgfancount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profile_image"
                android:layout_marginStart="205dp"
                android:layout_marginLeft="205dp"
                android:layout_marginBottom="22dp"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_toRightOf="@+id/profile_image"
                android:fontFamily="sans-serif-condensed"
                android:text="09"
                android:gravity="right"

                android:textColor="@color/black"
                android:textSize="13sp" />

            <Button
                android:id="@+id/select"
                android:layout_width="50sp"
                android:layout_height="30sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/orange"
                android:text="select"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/userid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp"/>

    <TextView
        android:id="@+id/imageURL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp"/>

    <TextView
        android:id="@+id/pgid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:paddingTop="10sp"
        android:text="Id :"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/pgabout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp" />


    <TextView
        android:id="@+id/pgtoken"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp" />

    <TextView
        android:id="@+id/link"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp" />

    <TextView
        android:id="@+id/about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp" />


    <TextView
        android:id="@+id/new_like_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp" />

    <TextView
        android:id="@+id/rating_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp" />

    <TextView
        android:id="@+id/talking_about_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp" />

    <TextView
        android:id="@+id/profile_access_token"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:visibility="invisible"
        android:layout_marginLeft="10sp" />


</RelativeLayout>