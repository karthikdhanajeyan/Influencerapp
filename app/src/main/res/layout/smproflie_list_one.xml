<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:background="@color/darkg_ashe">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ashe1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearonee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="20sp"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/linearone"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/applied_status"
                        android:layout_width="110sp"
                        android:layout_height="60sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/campappliedtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:singleLine="false"
                            android:typeface="sans"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/actionbarcolour"
                            android:textSize="15sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />


                        <TextView
                            android:id="@+id/campappliedstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="56563"
                            android:textColor="@color/orange"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="60sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="5sp"
                        android:layout_gravity="center"
                        android:background="@color/ashe"/>

                    <LinearLayout
                        android:id="@+id/payment_status"
                        android:layout_width="110sp"
                        android:layout_height="60sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/camppaymenttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Likes"
                            android:singleLine="false"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/actionbarcolour"
                            android:textSize="15sp"
                            android:typeface="sans"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />



                        <TextView
                            android:id="@+id/camppaymentstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="432"
                            android:textColor="@color/orange"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="60sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="5sp"
                        android:layout_gravity="center"
                        android:background="@color/ashe"/>

                    <LinearLayout
                        android:id="@+id/delivery_status"
                        android:layout_width="110sp"
                        android:layout_height="60sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/campdeliverytext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subcribers"
                            android:singleLine="false"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/actionbarcolour"
                            android:textSize="15sp"
                            android:typeface="sans"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />



                        <TextView
                            android:id="@+id/campdeliverystatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="222"
                            android:textColor="@color/orange"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                    <View
                        android:id="@+id/bottomline"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_below="@+id/linearone"
                        android:layout_gravity="center"
                        android:layout_marginTop="5sp"
                        android:background="@color/ashe" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>