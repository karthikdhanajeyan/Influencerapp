                        android:layout_marginTop="5sp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Click Here"
                        android:textColor="@color/orange"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
