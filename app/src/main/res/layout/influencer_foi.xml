<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_ashe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".RegistrationScreen1"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout"
            android:scaleType="fitXY">


            <TextView
                android:id="@+id/welcometext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Field Of Interest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Primary Field Of Interest : "
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:gravity="start"
                android:layout_below="@+id/welcometext"
                android:id="@+id/headingtext_one"
                android:layout_marginTop="30dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="(Choose any one)"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/orange"
                android:gravity="left"
                android:id="@+id/headingtext_two"
                android:layout_below="@+id/headingtext_one"
                android:layout_marginTop="5dp"
                android:textSize="18sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Please select your platform of strength with caution.Brands will be using this filter to shortlist you for their relevant campaigns."
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/transperent"
                android:gravity="start"
                android:id="@+id/headingtext_three"
                android:layout_below="@+id/headingtext_two"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/primary_profile0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headingtext_three"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_new"
                android:ems="16"
                android:gravity="center"
                android:inputType="text"
                android:singleLine="true"

                android:visibility="visible"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/primary_spinner"
                android:layout_width="340sp"
                android:layout_height="50sp"
                android:layout_alignTop="@+id/primary_profile0"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:textSize="18sp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/primary_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headingtext_three"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_new"
                android:ems="14"
                android:textColor="@color/black"
                android:gravity="left"
                android:inputType="text"
                android:singleLine="true"
                android:visibility="visible"
                android:textSize="18sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Secondary  Field Of Interest : "
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:gravity="start"
                android:id="@+id/headingtext_four"
                android:layout_below="@+id/primary_spinner"
                android:layout_marginTop="30dp"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="(Choose any two)"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/orange"
                android:gravity="left"
                android:id="@+id/headingtext_five"
                android:layout_below="@+id/headingtext_four"
                android:layout_marginTop="5dp"
                android:textSize="18sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Please select your platform of additional  with caution.Brands will be using this filter to shortlist you for their relevant campaigns."
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/transperent"
                android:gravity="start"
                android:id="@+id/headingtext_six"
                android:layout_below="@+id/headingtext_five"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/secondary_profile0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headingtext_six"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_new"
                android:ems="16"
                android:gravity="left"
                android:inputType="text"
                android:singleLine="true"
                android:visibility="visible"
                android:textSize="18sp" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/secondary_spinner"
                android:layout_width="340dp"
                android:layout_height="50sp"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_alignTop="@+id/secondary_profile0"
                android:visibility="visible" />

            <TextView
                android:id="@+id/secondary_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headingtext_six"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_new"
                android:ems="14"
                android:gravity="left"
                android:textColor="@color/black"
                android:inputType="text"
                android:singleLine="true"
                android:visibility="visible"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_button"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/secondary_spinner"
                android:gravity="center"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textAlignment="center"
                android:background="@color/orange"
                android:ems="9"
                android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>